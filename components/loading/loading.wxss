/* components/loading/loading.wxss */
.out {
    width: 80rpx;
    height: 80rpx;
    position: relative;
    margin: 30rpx auto;
}
.out>view {
    position: absolute;
    top: 0;
    left: 0;
    border-radius: 50%;
    width: 100%;
    height: 100%;
    background-color: yellowgreen;
    opacity: .3;
    animation: change 1.5s infinite ease-in-out;
}
.out>view:nth-child(2) {
    animation-delay: .7s;
    opacity: .6;
}
@keyframes change {
    0% {transform: scale(0)}
    50% {transform: scale(1)}
    100% {transform: scale(0)}
}